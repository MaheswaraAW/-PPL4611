<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginBottom="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
<!--        <TextView-->
<!--            android:id="@+id/idTVNo"-->
<!--            android:layout_width="0dp"-->
<!--            android:layout_height="match_parent"-->
<!--            android:layout_weight="1"-->
<!--            android:text="No"-->
<!--            android:gravity="center"-->
<!--            android:textStyle="bold"-->
<!--            android:textSize="10dp"-->
<!--            android:textColor="@color/black"></TextView>-->
        <ImageView
            android:id="@+id/idIVGambarGame"
            android:layout_width="0dp"
            android:layout_height="180dp"
            android:layout_weight="3"
            android:gravity="center"
            android:scaleType="fitXY"
            android:background="@drawable/ic_launcher_background"
            android:textColor="@color/black"></ImageView>
        <TextView
            android:id="@+id/idTVName"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Name"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="10dp"
            android:textColor="@color/black"></TextView>
        <TextView
            android:id="@+id/idTVWin"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Win"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="10dp"
            android:textColor="@color/blue"></TextView>
        <TextView
            android:id="@+id/idTVLose"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Lose"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="10dp"
            android:textColor="@color/merah"></TextView>
        <ImageView
            android:id="@+id/idIVDelete"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/delete"
            android:textSize="10dp"
            android:layout_marginRight="5dp"
            android:gravity="center"></ImageView>
    </LinearLayout>

</LinearLayout>